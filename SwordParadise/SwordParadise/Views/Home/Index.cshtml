<script>
    var duration = 5000;

    var slides = document.querySelectorAll('.slide');
    var index = 0;

    setInterval(function () {
        // Hide the current slide
        slides[index].classList.remove('active');

        // Move to the next slide
        index++;
        if (index >= slides.length) {
            index = 0;
        }

        // Show the next slide
        slides[index].classList.add('active');
    }, duration);
</script>
