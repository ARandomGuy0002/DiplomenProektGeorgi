<style>
    .popup {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 9999;
}

.popup h3 {
    font-size: 2rem;
    color: #fff;
    text-align: center;
    margin-top: 25%;
}

.popup button {
    display: block;
    margin: 20px auto 0;
    padding: 10px 20px;
    font-size: 1.2rem;
    border-radius: 5px;
    background-color: #007bff;
    color: #fff;
    border: none;
    cursor: pointer;
}
</style>
<div id="over-18-popup" class="popup">
    <h3>Are you over 18?</h3>
    <button id="yes-btn">Yes</button>
    <button id="no-btn">No</button>
</div>
<script>
    $(document).ready(function () {
    var over18Popup = $('#over-18-popup');

    // Show the popup when the page loads
    over18Popup.show();

    // When the user clicks the Yes button, hide the popup and continue with the site
    $('#yes-btn').click(function () {
        over18Popup.hide();
    });

    // When the user clicks the No button, redirect them to a different page (e.g. a parental consent form)
    $('#no-btn').click(function () {
        window.location.href = '/parental-consent';
    });
});
</script>
