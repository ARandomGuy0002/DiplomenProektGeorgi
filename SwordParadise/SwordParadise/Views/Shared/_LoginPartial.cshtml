@using Microsoft.AspNetCore.Identity
@using SwordParadise.Domain
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
<div class="dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <img src="https://cdn.icon-icons.com/icons2/2406/PNG/512/user_account_icon_145918.png" width="50" height="50" class="rounded-circle" alt="Your Image">
    </a>
    <div class="dropdown-menu" aria-labelledby="userDropdown">
        @if (SignInManager.IsSignedIn(User))
        {
            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Hello @User.Identity.Name!</a>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="dropdown-item">Logout</button>
            </form>
        }
        else
        {
            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Register</a>
            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">Login</a>
        }
    </div>
</div>
</ul>
