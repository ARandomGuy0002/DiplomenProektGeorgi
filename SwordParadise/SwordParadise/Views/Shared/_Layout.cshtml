<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SwordParadise</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<style>
    .dropdown-menu {
        transition: all 0.3s ease-in-out;
    }
    .navbar-container {
        width: 140%;
        max-width: 1800px;
    }

    .navbar-search form .input-group {
        margin-right: 10px; /* adjust as needed */
    }

    .navbar-search form .input-group input[type="text"] {
        border-color: black;
        color: #000;
        border-radius: 20px;
        transition: all 0.3s ease-in-out;
    }

        .navbar-search form .input-group input[type="text"]:focus {
            border-color: grey;
            box-shadow: none;
        }

    .navbar-search form .input-group .input-group-append .btn {
        margin-left: 10px; /* adjust as needed */
        background-color: #fe90d2;
        color: #fff;
        border-radius: 20px;
        border-color: #fe90d2;
        transition: all 0.3s ease-in-out;
    }

        .navbar-search form .input-group .input-group-append .btn:hover {
            background-color: #fefa3f;
            color: #000;
            border-color: #fefa3f;
        }

        #space
        {
            padding: 40px;
        }
</style>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="navbar-container container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SwordParadise</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Weapon" asp-action="Index">Weapons</a>
                        </li>
                        @if ((this.User.Identity.IsAuthenticated))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="MyOrders">My Orders</a>
                            </li>
                        }
                        @if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                                   aria-haspopup="true" aria-expanded="false">
                                    Statistic Modul
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-controller="Client" asp-action="Index">Clients</a>
                                    <a class="dropdown-item" asp-controller="Order" asp-action="Index">Orders</a>
                                    <a class="dropdown-item" asp-controller="Statistics" asp-action="Index">Statistics</a>
                                </div>
                            </li>
                        }
                    </ul>
<div class="navbar-search ml-auto">
  <form asp-controller="Weapon" asp-action="Index" method="get">
    <div class="input-group">
      <input type="text" class="form-control" name="searchStringWeaponName" placeholder="Search for a weapon...">
      <div class="input-group-append">
        <button type="submit" class="btn btn-outline-secondary">
          <i class="fas fa-search"></i> <span class="button-text">Search</span>
        </button>
      </div>
    </div>
  </form>
</div>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="body-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <p id="space"></p>
    <footer class="navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3 footer text-muted">
        <div class="navbar-container container">
            &copy; 2023 - SwordParadise - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
