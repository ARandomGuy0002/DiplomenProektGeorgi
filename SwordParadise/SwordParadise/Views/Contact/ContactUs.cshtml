<body class ="gradient-custom">
    <div class="contact-container">
        <div class="contact-info">
            <h3>Contact Information</h3>
            <div class="contact-item">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/4b/Phone_font_awesome.svg/1200px-Phone_font_awesome.svg.png" alt="Phone">
                <a href="tel:+359894426167">+359894426167</a>
            </div>
            <div class="contact-item">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/7/74/Envelope_alt_font_awesome.svg/1024px-Envelope_alt_font_awesome.svg.png" alt="Mail">
                <a href="mailto:rankoma21@gmail.com">rankoma21@gmail.com</a>
            </div>
            <div class="contact-item">
                <img src="https://cdn.pixabay.com/photo/2021/06/15/12/17/instagram-6338401_1280.png" alt="Instagram">
                <a href="https://www.instagram.com/g_doichevv/">g_doichevv</a>
            </div>
            <div class="contact-item">
                <img src="https://cdn-icons-png.flaticon.com/512/124/124010.png" alt="Facebook">
                <a href="https://www.facebook.com/ARandomqt/">Георги Дойчев</a>
            </div>
            <div class="contact-item">
                <img src="https://png.pngtree.com/png-vector/20221018/ourmid/pngtree-twitter-social-media-round-icon-png-image_6315985.png" alt="Twitter">
                <a href="https://twitter.com/randomqtt">randomqtt</a>
            </div>
            <div class="map-container">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3597.4562549643165!2d23.038076476578226!3d42.61736921880593!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14aacad3c8a8f831%3A0x5feda170680a9f00!2sg.k.%20Prouchvane%2013%D0%90%2C%202301%20Prouchvane%2C%20Pernik!5e1!3m2!1sen!2sbg!4v1682011965738!5m2!1sen!2sbg" width="450" height="350" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    </div>
        </div>
    @if ((this.User.Identity.IsAuthenticated))
        {
            <div class="contact-form">
                <h3>Contact Form</h3>
            <form method="post">
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input type="text" class="form-control" name="firstName" id="firstName" value="@Model.FirstName" required>
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input type="text" class="form-control" name="lastName" id="lastName" value="@Model.LastName" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email" id="email" value="@Model.Email" required>
                </div>
                <div class="form-group">
                    <label for="comment">Comment</label>
                    <textarea class="form-control" name="comment" id="comment" required>@Model.Comment</textarea>
                </div>
                <button type="submit" class="create-new-btn btn-primary">Send</button>
            </form>
        </div>
        }
    </div>
</body>


